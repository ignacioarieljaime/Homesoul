<%- include('../layout/header') %>
<form id="crud-frm" class="crud-frm" method="post" action="<%= url %>" autocomplete="off" enctype="multipart/form-data">
  <div class="row">
    <div class="col-lg-12 col-12">
      <div class="card card-info card-outline">
        <div class="card-header">
          <h3 class="card-title">
            <%= title %>
          </h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Email to : <small>Add emails comma separated </small></label>
                <textarea class="form-control" name="email_to" id=""><%= data != null ? data['email_to'] : ''%></textarea>
                <!-- <input type="text" class="form-control" name="firstName" value="" > -->
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-info">
            <%= data==null ? 'Add' : 'Update' %>
          </button>
        </div>
      </div>
    </div>
  </div>
</form>
<%- include('../layout/footer') %>