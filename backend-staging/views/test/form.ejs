<form id="crud-frm" class="crud-frm" method="post" action="<%= url %>" autocomplete="off" enctype="multipart/form-data">
    <div class="row">
      <div class="col-lg-12 col-12">
        <div class="card card-info card-outline">
          <div class="card-header">
            <h3 class="card-title">
              <%= title %>
            </h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Title </label>
                  <input type="text" class="form-control" name="title" value="<%= data != null ? data['title'] : ''%>" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Desc </label>
                  <input type="text" class="form-control" name="desc" value="<%= data != null ? data['desc'] : ''%>" required>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <button type="submit" class="btn btn-info">
              <%= data==null ? 'Add' : 'Update' %>
            </button>
            <a href="/test"><button type="button" class="btn btn-default ml-2">Cancel</button></a>
          </div>
        </div>
      </div>
    </div>
  </form>